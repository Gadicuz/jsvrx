{
  "transform": {
    "^.+\\.(j|t)s$": ["ts-jest", {"tsConfig": "tsconfig.jest.json"}]
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transformIgnorePatterns": [
    "node_modules/(?!(jsvrx)/)"
  ],
  "moduleNameMapper": {
    "^jsvrx$": "<rootDir>/packages/jsvrx/src/jsvrx.ts"
  },
  "coverageProvider": "v8"
}
